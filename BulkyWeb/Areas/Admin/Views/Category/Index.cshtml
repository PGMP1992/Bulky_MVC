@model List<Category>
<partial name="_Notification" />

<div class="card border-1 mt-4">
    <div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
        <div class="row px-4">
            <div class="col-6">
                <h5 class="pt-2 text-white">
                    Category List
                </h5>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6"></div>
            <div class="col-12 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-sm-3">
                <thead class="table-info">
                    <tr>
                        <th>Category Name</th>
                        <th>Display Order</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.DisplayOrder</td>
                            <td>
                                <div class="btn-group">
                                <a asp-controller = "Category" asp-action = "Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-controller = "Category" asp-action = "Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-1">
                                        <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
